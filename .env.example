# ================================
# KabaadiSaathi — Environment Template
# ================================
# Copy this file to .env and fill in real values
# DO NOT store real credentials here

# ── Database (Aiven Cloud PostgreSQL) ──
DB_URL=jdbc:postgresql://<host>:<port>/defaultdb?sslmode=require
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password

# ── JWT ──
JWT_SECRET=your_jwt_secret_at_least_256_bits
JWT_EXPIRATION_MS=86400000

# ── CORS (comma-separated list of allowed frontend origins) ──
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ── Frontend build (Vite) ──
# Set to /api when frontend & backend share the same host (nginx proxy)
# Set to https://your-backend.com/api for separate-host deployments
VITE_API_URL=/api

# ── Docker Compose runtime ──
# URL the nginx container uses to reach the backend (internal Docker network name)
BACKEND_URL=http://backend:8080
